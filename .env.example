# Environment Variables for Granite Chat Application
# Copy this file to .env and fill in your actual values

# Meteoblue Weather API Key
# Get your API key from: https://www.meteoblue.com/en/weather-api
# Use "demo" for testing with mock data
METEOBLUE_API_KEY=demo

# Server Configuration (optional)
# HOST=0.0.0.0
# PORT=8000

# Model Configuration (optional)
# MODEL_PATH=ibm-granite/granite-4.0-1b

# File Upload Configuration (optional)
# MAX_FILE_SIZE_MB=50
# ALLOWED_EXTENSIONS=pdf,docx,pptx,xlsx,png,jpg,jpeg,gif,txt,md
# UPLOAD_DIR=./uploads
# CACHE_DIR=./cache
# LOG_DIR=./logs

# Cache Configuration (optional)
# CACHE_TTL_HOURS=24
# CLEANUP_INTERVAL_MINUTES=60